{
  "name": "email",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js'",
    "check": "pnpm run lint && pnpm run format:check && pnpm run test",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist coverage",
    "reinstall": "pnpm run clean && pnpm install",
    "docker:build": "docker build -t email-integration-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env email-integration-server",
    "docker:compose": "docker-compose up -d --build",
    "docker:compose:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:compose:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "docker:compose:staging": "docker-compose -f docker-compose.yml -f docker-compose.staging.yml up -d --build",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "analyze": "pnpm dlx madge --circular --extensions js src/",
    "deps:check": "pnpm dlx npm-check-updates",
    "deps:update": "pnpm dlx npm-check-updates -u && pnpm install",
    "validate": "pnpm run check && pnpm run test:coverage",
    "deploy:dev": "pnpm run docker:compose:dev",
    "deploy:staging": "pnpm run docker:compose:staging",
    "deploy:prod": "pnpm run docker:compose:prod",
    "precommit": "pnpm run validate",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@agent-infra/mcp-server-browser": "^1.2.20",
    "@anthropic-ai/sdk": "^0.61.0",
    "@heroku/mcp-server": "^1.0.7",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@sentry/mcp-server": "^0.17.1",
    "@sentry/node": "^10.8.0",
    "@supabase/mcp-server-supabase": "^0.5.1",
    "@upstash/context7-mcp": "^1.0.16",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "imap": "^0.8.17",
    "mailparser": "^3.7.4",
    "mcp-server-docker": "^1.0.0",
    "puppeteer": "^24.17.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
